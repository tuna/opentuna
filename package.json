{
  "name": "opentuna",
  "description": "It's an app to deploy open tuna on AWS.",
  "version": "1.0.0",
  "bin": {
    "opentuna": "bin/opentuna.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "init": "npx cdk bootstrap && npm i",
    "deploy-network": "npx cdk deploy OpenTunaNetworkStack --app 'npx ts-node bin/opentuna-network.ts'"
  },
  "devDependencies": {
    "@aws-cdk/assert": "1.49.1",
    "@types/jest": "^25.2.1",
    "@types/node": "10.17.5",
    "@types/mustache": "^4.0.1",
    "jest": "^25.5.0",
    "ts-jest": "^25.3.1",
    "aws-cdk": "1.49.1",
    "ts-node": "^8.1.0",
    "typescript": "~3.7.2"
  },
  "dependencies": {
    "@aws-cdk/aws-autoscaling": "^1.49.1",
    "@aws-cdk/aws-ec2": "^1.49.1",
    "@aws-cdk/aws-efs": "^1.49.1",
    "@aws-cdk/core": "1.49.1",
    "mustache": "^4.0.1",
    "source-map-support": "^0.5.16"
  }
}
